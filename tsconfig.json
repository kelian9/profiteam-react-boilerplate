{
	"compilerOptions": {
		"target": "es5",
		"outDir": "./dist/",
		"sourceMap": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			// "@common/*": ["./src/common/*"],
			"@slices/*": [
				"./src/store/slices/*"
			],
			"@store/*": [
				"./src/store/*"
			],
			"@api/*": [
				"./src/api/*"
			],
			"@views/*": [
				"./src/components/views/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@models/*": [
				"./src/models/*"
			],
			"@enums/*": [
				"./src/models/enums/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@router/*": [
				"./src/router/*"
			],
			"@assets/*": [
				"./src/assets/*"
			],
		}
	},
	"include": [
		"src",
		"declarations.d.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts",
		"cypress/*"
	]
}

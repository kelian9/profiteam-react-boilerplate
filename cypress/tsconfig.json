{
	"include": [
		"../node_modules/cypress",
		"support/*.ts",
		"*/*.ts",
		"../src/**/*/test.spec.cy.tsx",
	],
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": "..",
		"paths": {
			"@api/*": [
				"./src/api/*"
			],
			"@models/*": [
				"./src/models/*"
			]
		},
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": [
			"cypress",
			"@testing-library/cypress",
			"node",
			"@4tw/cypress-drag-drop",
			"cypress-file-upload"
		]
	}
}

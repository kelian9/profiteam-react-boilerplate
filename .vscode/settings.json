{
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"files.associations": {
		".hbs": "plaintext"
	},
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports": "always",
		"source.fixAll.eslint": "always"
	},
	"files.insertFinalNewline": true,
	"eslint.validate": [
		"typescript",
		"typescriptreact"
	],
}
